                    android:text="QuantitÃ© en stock :"
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/detail_qteS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="5dp"
                    android:text="Nom product"
                    android:layout_weight="1"
                    android:textColor="@color/blue" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:text="Prix de Revient unitaire:"
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/detail_prixAu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="5dp"
                    android:text="prix"
                    android:layout_weight="1"
                    android:textColor="@color/blue" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:text="Prix de revient total:"
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/detail_priAt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="5dp"
                    android:text="Nom product"
                    android:layout_weight="1"
                    android:textColor="@color/blue" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:text="Prix de vente unitaire:"
                    android:textColor="@color/blue" />

